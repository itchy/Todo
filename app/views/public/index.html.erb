<div id="intro">
	<div class="image_wrapper">
	</div>
	<div id="welcome-text">	
		<p>
			Todo is a simple todo list that accepts new items through sms text or emails
		</p>	
	</div>		
</div>	
<div id="login">
	<h3>Log in</h3>
	<%= form_for :user, :url => session_login_path, :html => { :class => "html5", :id => "login_form", "accept-charset" => "utf-8"} do  |f| %>
		<div id="errors" class="error" >
			<!-- This is a place holder DIV where any error messages about this form will be placed -->
			<%= (render '/application/error', {:error => flash[:login_error]}) if flash[:login_error] %>
		</div>
		<label id="email">Email</label><label id="password">Password</label><br/>
		<%= f.text_field :email, :placeholder => "email", %>
		<%= f.password_field :password, :placeholder => "password" %>
		<%= f.submit :login %>
	<% end %>
</div>