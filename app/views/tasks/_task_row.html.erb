<tr <%= "id=task_#{task.id} class='#{cycle 'odd', 'even'}'" %> >
  <td><%= link_to task.user.display_name, task.user %></td>
  <td><%= task.status %></td>
  <td><%= link_to truncate(task.description,:length => 75), edit_task_path(task) %></td>
  <td>
    <%= link_to 'Edit', edit_task_path(task), :class => 'btn btn-mini' %>
    <%= link_to 'Close', close_task_path(task), :method => :put, :class => 'btn btn-mini btn-success' %>
  </td>
</tr>